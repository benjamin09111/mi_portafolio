---
import {projects} from "../data/projects";

import ProjectCard from "./ui/ProjectCard.astro";
---
<section id="projects">
    <h3 class="text-2xl xl:text-3xl font-semibold mb-6">Proyectos</h3>

    <div class="grid gap-3 grid-cols-1 md:grid-cols-2 2xl:grid-cols-3 lg:gap-12">
        {projects.reverse().map(project => (
            <ProjectCard {...project} />
        ))}
    </div>
</section>