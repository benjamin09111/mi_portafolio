---
import { experience } from "../data/experience.js";
import ExperienceCard from "./ui/ExperienceCard.astro";

const pathname = Astro.url.pathname;
const lang = pathname.startsWith("/en") ? "en" : pathname.startsWith("/de") ? "de" : "es";

const titles = {
es: "Experiencia",
en: "Experience",
de: "Erfahrung",
}[lang];
---

<section id="experience" class="fade-in">
  <h3 class="text-2xl xl:text-3xl font-semibold my-6">{titles}</h3>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 py-4">
    {experience.map(exp => (
      <ExperienceCard {...exp} lang={lang} />
    ))}
  </div>
</section>
