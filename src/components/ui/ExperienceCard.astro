---
const { title, type, duration, company, company_url, image, web, skills, description } = Astro.props;
---

<article class="flex flex-col lg:flex-row lg:items-start gap-4 p-2 md:p-5 border rounded lg:rounded-lg md:shadow-md">
    <img src={image} alt={company} class="w-12 h-12 rounded-md object-cover" />
    <div>
        <h3 class="text-lg font-semibold">{title}</h3>
        <a href={company_url} class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer">
        {company}
        </a>
        <p class="text-sm text-gray-600">{type} | {duration}</p>
        <a href={web} class="text-sm text-gray-600">Visitar sitio</a>
        <p class="text-sm text-gray-800 mt-2">{description}</p>
        <p class="text-sm text-gray-500 mt-1">Habilidades: {skills}</p>
    </div>
</article>
